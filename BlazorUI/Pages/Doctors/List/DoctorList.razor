@page "/doctors"
@using OnlineClinic.Core.Services

<div class="row">
  <div class="col-sm-6">
    <h2>Doctors</h2>
    @foreach(var dr in Physicians)
    {
        <div class="card" style="margin-bottom:10px">
            <div class="card-body">
                <h5 class="card-title">@dr.DoctorFullname @dr.Title.ToUpper()</h5>
                <h6 class="card-subtitle mb-2 text-muted">@dr.SpecializationName</h6>
                <p class="card-text">More Info</p>
                <a href="#" class="card-link text-sm">View Appointments</a>
                <a href="#" class="card-link text-sm">Schedule Appoinment</a>
            </div>
        </div>
    }
  </div>
</div>