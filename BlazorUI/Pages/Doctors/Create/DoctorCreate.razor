@page "/doctors/create"

<div class="row">
    <div class="col-sm-6">
        <h2>New Doctor</h2>

        <EditForm EditContext="editContext" OnSubmit="SubmitForm">

            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="title">Title</label>
                <InputText id="title" @bind-Value="createDto.Title" class="form-control"></InputText>
                <ValidationMessage For="@(() => createDto.Title)"></ValidationMessage>    
            </div>

            <div class="form-group">
                <label for="person">Person</label>
                    <select @onchange="OnPersonChanged"
                        class="form-control">
                            <option value=0></option>
                            @foreach(var person in people )
                            {
                                <option value="@person.Key">@person.Value</option>
                            }
                    </select>
                <ValidationMessage For="@(() => createDto.PersonId)"></ValidationMessage>    
            </div>

            <div class="form-group">
                <label for="specialization">Specialization</label>
                    <select @bind="createDto.SpecializationId" @bind:event="onchange" class="form-control">
                        <option value=0></option>
                        @foreach(var s in specializations)
                        {
                            <option value="@s.Key">@s.Value</option>
                        }
                    </select>
                <ValidationMessage For="@(() => createDto.SpecializationId)"></ValidationMessage>    
            </div>

            <div class="form-group">
                <label for="emailAddress">Email Address / Username</label>
                <InputText id="emailAddress" @bind-Value="createDto.EmailAddress" class="form-control" type="email"></InputText>
                <ValidationMessage For="@(() => createDto.EmailAddress)"></ValidationMessage>    
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <InputText id="password" @bind-Value="createDto.Password" class="form-control" type="password"></InputText>
                <ValidationMessage For="@(() => createDto.Password)"></ValidationMessage>    
            </div>

            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <InputText id="confirmPassword" @bind-Value="createDto.ConfirmPassword" class="form-control" type="password"></InputText>
                <ValidationMessage For="@(() => createDto.ConfirmPassword)"></ValidationMessage>    
            </div>

            <div class="row">
                <div class="col text-left">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>

        </EditForm>
    </div>
</div>

